<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="522dp">

        <ImageView
            android:id="@+id/imgCurrentDriveImage"
            android:layout_width="400dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCurrentDriveDonate"
            android:layout_width="274dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#7F01E2"
            android:text="invest"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentDriveDescription"
            app:layout_constraintVertical_bias="0.033" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnType"
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#BAFFFB"
            android:text="new"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCurrentDriveImage" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoal"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbuttontwo"
            android:backgroundTint="#EDDEE8"
            android:text="Button"
            app:layout_constraintStart_toEndOf="@+id/btnCategory"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentDriveName" />

        <TextView
            android:id="@+id/tvCurrentDriveName"
            android:layout_width="195dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCurrentDriveImage" />

        <TextView
            android:id="@+id/tvCurrentDriveDescription"
            android:layout_width="343dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCategory" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCategory"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbuttontwo"
            android:backgroundTint="#EDDEE8"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentDriveName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

